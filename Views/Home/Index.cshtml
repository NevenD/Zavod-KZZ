        text-align: center;
        font-weight: 600;
        color: white;
        text-shadow: 5px 5px 10px black;
    }

    .image {
        opacity: 1;
        transition: .5s ease;
        backface-visibility: hidden;
    }

    .container-hover:hover .image {
        opacity: 0.3;
    }

    .container-hover:hover .middle {
        opacity: 1;
    }

    .container-hover:hover .image-overlay {
        opacity: 0;
    }

    .text {
