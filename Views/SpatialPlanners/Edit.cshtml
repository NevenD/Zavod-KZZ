@model ZAVOD_KZZ.Core.Models.SpatialPlanner

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="DashBoard" asp-action="Index">Upravljačka ploča</a>
        <li class="breadcrumb-item"><a asp-controller="SpatialPlanners" asp-action="Index">Izrađivači planova</a>
        <li class="breadcrumb-item active" aria-current="page">Uređivanje @Model.Name</li>
    </ol>
</nav>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="@Model.DateAdded" />
            <div class="edit-administration-form">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Naziv</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Lokacija</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="Location" class="form-control" />
                    </div>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label">Adresa</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label">Kontakt telefon</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="Phone" class="form-control" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">E-mail adresa</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="Email" class="form-control" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WebAdress" class="control-label">Web adresa</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-info"></i></span>
                        </div>
                        <input autocomplete="off" asp-for="WebAdress" class="form-control" />
                    </div>
                    <span asp-validation-for="WebAdress" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-outline-secondary" asp-action="Index"><span class="fas fa-arrow-left mr-1"></span>Povratak</a>
                <button type="submit" class="btn btn-outline-success"><i class="fa fa-check"></i> Pohrani </button>
            </div>
        </form>
    </div>

</div>

