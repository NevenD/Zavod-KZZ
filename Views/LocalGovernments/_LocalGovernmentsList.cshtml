@using ZAVOD_KZZ.Helpers.Translations
@model IEnumerable<ZAVOD_KZZ.Core.Models.LocalGovernmentAdministration>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<p class="lead">
    Popis JLS u KZŽ
</p>
<hr />
<div class="edit-administration-form">
    <input class="form-control" id="selectLocalAdministration" type="text" placeholder="Pretražite JLS po nazivu ili MBR.." autocomplete="off">
    <br />
    <div id="listKZZ" class="list-group kzz-list-group edit-administration-form">
        @foreach (var item in Model)
        {
            var isCity = item.IsAdministrativeCity == true;

            <a asp-action="Details" asp-route-Id="@item.Id" asp-controller="LocalGovernments" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    @if (isCity)
                    {
                        <h5 class="mb-1" style="font-size: 1rem;">Grad: @item.Name</h5>
                    }
                    else
                    {
                        <h5 class="mb-1" style="font-size: 1rem;">Općina: @item.Name</h5>
                    }
                    <small class="text-muted">MBR: @item.CodeNumber</small>
                </div>
                <small class="text-muted">Klikni za detalje</small>
            </a>
        }
    </div>
</div>

