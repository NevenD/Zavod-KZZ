@using ZAVOD_KZZ.Helpers.Translations
@model IEnumerable<ZAVOD_KZZ.Core.Models.LocalGovernmentAdministration>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table class="table table-striped table-bordered table-responsive  w-auto small" id="localGovernmentPopulation" style="width:100%">
    <thead>
        <tr>
            <th align="center" rowspan="2">Općina/Grad</th>
            <th align="center" colspan="2">Broj stanovnika</th>
            <th align="center" rowspan="2">% smanjenje broja sta.</th>
            <th align="center" rowspan="2">Indeks promjene broja stanovnika (2011.)</th>
            <th align="center" rowspan="2">Površina (km<sup>2</sup>)</th>
            <th align="center" colspan="2">Gustoća stanovništva (st./km<sup>2</sup>)</th>
        </tr>
        <tr>
            <th align="center">2001.</th>
            <th align="center">2011.</th>
            <th align="center">2001.</th>
            <th align="center">2011.</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population2001)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population2011)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopulationIndexChange2011)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopulationDecrease2011)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurfaceArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopulationDensity2001)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PopulationDensity2011)
            </td>
        </tr>
        }
    </tbody>
</table>
<style>
    .table thead th {
    vertical-align: middle !important;
    text-align: -webkit-center !important;
}
</style>